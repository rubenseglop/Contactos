<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/multiple_image_select_primary">

        <RelativeLayout
            android:id="@+id/cajadomicilio"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <TextView
                android:id="@+id/domicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:text="Domicilio" />

            <EditText
                android:id="@+id/id_rvdomicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="22dp"
                android:layout_toStartOf="@+id/fotoperfil"
                android:layout_toEndOf="@+id/domicilio"
                android:ems="10"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/fotoperfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="3dp"
                app:srcCompat="@drawable/ic_clear" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>